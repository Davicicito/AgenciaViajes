<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.PasswordField?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AgregarAgenteF"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="50.0" layoutY="30.0" text="Agregar Agente" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <Label layoutX="50.0" layoutY="80.0" text="Nombre:" />
        <TextField fx:id="txtNombre" layoutX="150.0" layoutY="75.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="120.0" text="Email:" />
        <TextField fx:id="txtEmail" layoutX="150.0" layoutY="115.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="160.0" text="Código Empleado:" />
        <TextField fx:id="txtCodigoEmpleado" layoutX="150.0" layoutY="155.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="200.0" text="Oficina:" />
        <TextField fx:id="txtOficina" layoutX="150.0" layoutY="195.0" prefWidth="300.0" />

        <Label layoutX="50.0" layoutY="240.0" text="Activo:" />
        <CheckBox fx:id="chkActivo" layoutX="150.0" layoutY="235.0" />

        <Label layoutX="50.0" layoutY="280.0" text="Contraseña:" />
        <PasswordField fx:id="txtContraseña" layoutX="150.0" layoutY="275.0" prefWidth="300.0" />

        <Button fx:id="btnGuardar" text="Guardar" layoutX="150.0" layoutY="300.0" onAction="#handleGuardar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button fx:id="btnCancelar" text="Cancelar" layoutX="250.0" layoutY="300.0" onAction="#handleCancelar" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
    </children>
</AnchorPane>
