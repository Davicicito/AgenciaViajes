<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.SeleccionarViajeF" prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Seleccionar Viaje" style="-fx-font-size: 20px;" />
        <TableView fx:id="tableViajes" layoutX="20.0" layoutY="60.0" prefHeight="300.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="colDestino" text="Destino" prefWidth="150.0" />
                <TableColumn fx:id="colFechaSalida" text="Fecha Salida" prefWidth="150.0" />
                <TableColumn fx:id="colFechaRegreso" text="Fecha Regreso" prefWidth="150.0" />
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100.0" />
            </columns>
        </TableView>
        <Button layoutX="20.0" layoutY="380.0" text="Reservar" onAction="#handleReservar" />
        <Button layoutX="120.0" layoutY="380.0" text="Cancelar" onAction="#handleCancelar" />
    </children>
</AnchorPane>
